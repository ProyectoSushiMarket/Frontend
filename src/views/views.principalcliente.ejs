    <section class="products-grid">
             <!-- Consumo mostrar productos -->
             <script>
                function modalproducto () {
                    document.getElementById("add-product-modal").style.display = "flex";
                }
                const apiURL = "http://localhost:4100/producto";
            
                // Funci贸n para cargar los productos desde el backend
                async function cargarProductos() {
                    try {
                        const response = await fetch(apiURL);
                        if (!response.ok) throw new Error("Error al cargar los productos");
            
                        const productos = await response.json();
                        const productsGrid = document.querySelector(".products-grid");
            
                        // Limpiamos el grid
                        productsGrid.innerHTML = "";
            
                        // Iteramos y renderizamos cada producto
                        productos.forEach(producto => {
                            const productCard = document.createElement("div");
                            productCard.className = "product-card";
            
                            productCard.innerHTML = `
                                <div class="product-image">
                                    <img src="${producto.imagen}" alt="${producto.nombre}">
                                </div>
                                <div class="product-info" style="text-align: center;">
                                    <h3>${producto.nombre}</h3>
                                </div>
                            `;
            
                            productsGrid.appendChild(productCard);
                        });
                    } catch (error) {
                        console.error("Error:", error);
                        alert("No se pudieron cargar los productos.");
                    }
                }
            
                // Simula agregar al carrito (puedes reemplazar esta funci贸n con tu l贸gica)
                function agregarAlCarrito(idProducto) {
                    alert(`Producto con ID ${idProducto} a帽adido al carrito`);
                }
            
                // Cargar productos al cargar la p谩gina
                document.addEventListener("DOMContentLoaded", cargarProductos);
                
            </script>
        
    </section>

    <script src="/js/principalcliente.js"></script>

</body>
</html>
